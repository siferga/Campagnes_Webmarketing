{% extends "base.html.twig" %}


{% block title %}Détails de
	{{ campaign.name }}
{% endblock %}

{% block body %}
	<main class="container">
		<section class="row">
			<div class="col-12">
				<h1>Détails de
					{{ campaign.name }}
				</h1>
			</div>

			<div class="col-6">
				<p>{{ campaign.description }}</p>
				<p>Catégory :
					{{ campaign.category.name }}</p>
				<p>Prix :
					{{ campaign.price / 100 }}€</p>
			</div>

		</section>
	</main>
{% endblock %}
