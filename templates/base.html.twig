<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Accueil
			{% endblock %}
			- Site e-commerce Symfony 6</title>
		<meta
		name="viewport" content="width=device-width, initial-scale=1.0">

		<!-- CSS -->
		<link rel="stylesheet" href="{{ asset('assets/css/bootstrap.min.css') }}"> {% block stylesheets %}{% endblock %}
		<link
		rel="stylesheet" href="{{ asset('assets/css/styles.css') }}">


		<!-- JS -->
		<script src="{{ asset('assets/js/bootstrap.bundle.min.js') }}" defer></script>
		{% block javascripts %}{% endblock %}
		<script src="https://kit.fontawesome.com/9ff5e7fe9a.js" crossorigin="anonymous"></script>
		<script src="{{ asset('assets/js/scripts.js') }}" defer></script>
	</head>

	<body>
		{# header 1 #}
		{% include "_partials/_nav.html.twig" %}
		{# header 2 #}
		<div class="container-fluid">
			<div class="row py-4" style="background-color: #343a55;">
				<div class="col d-flex justify-content-center">
					{% if app.user and app.user.isVerified == false %}
						<span class="text-center" style="color:white;">Bienvenue
							{{ app.user.email }}
							<div class="alert alert-warning alert-dismissible" role="alert">
								<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
								<div class="alert-message">
									<strong>Votre compte n'est pas activ√©</strong>,
									<a href="{{ path('resend_verif') }}">renvoyer le lien d'activation</a>
								</div>
							</div>
						</span>
					{% else %}
						<span class="text-center" style="color:white;">
							<h5>Merci de vous connecter
							</h5>

						</span>
					{% endif %}
				</div>
			</div>
		</div>

		<!--afficher les messages-->
		{% include "_partials/_flash.html.twig" %}

		{% block body %}{% endblock %}

		{% include "_partials/_footer.html.twig" %}
	</body>
</html>
