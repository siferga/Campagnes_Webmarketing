{% extends 'base.html.twig' %}

{% block title %}Liste de catégories
{% endblock %}

{% block body %}
	<div class="container">

		<div class="row py-lg-5">
			{% include "_partials/_administration.html.twig" %}
			<main>
				<h1>Liste de catégories</h1>
				<table class="table table-striped table-hover table-bordered table-sm ">
					<thead>
						<tr>
							<td>id</td>
							<td>Name</td>
							<td>Parent</td>
							<td>Slug</td>
							<td>Ordre</td>
						</tr>
					</thead>
					{% for category in allCategories %}
						<tr>
							<td>{{ category.id }}</td>
							<td>{{ category.name }}</td>
							<td>{{ category.parent }}</td>
							<td>{{ category.slug }}</td>
							<td>{{ category.categoryOrder }}</td>
						</tr>
					{% endfor %}
					<!-- adding a button to each category -->


				</table>
			</main>
		</div>
	</div>
{% endblock %}
